{
  "name": "stylelint-config-pv",
  "version": "0.1.2",
  "description": "pro!vision stylelint configuration. Can be adapted and adjusted in each project.",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "pro-vision"
  ],
  "author": {
    "name": "pro!vision GmbH",
    "url": "http://www.pro-vision.de"
  },
  "contributors": [
    {
      "name": "Bert-Ulrich Baumann",
      "email": "bbaumann@pro-vision.de"
    },
    {
      "name": "Melanie Stiller",
      "email": "mstiller@pro-vision.de"
    },
    {
      "name": "Fritz Stelluto",
      "email": "fstelluto@pro-vision.de"
    }
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pro-vision/style-config-pv.git"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "devDependencies": {
    "eslint": "^3.1.1",
    "eslint-config-pv": "^1.0.0",
    "eslint-config-stylelint": "^6.0.0",
    "eslint-plugin-import": "^2.2.0",
    "jest": "^17.0.3",
    "npm-run-all": "^3.0.0",
    "npmpub": "^3.0.1",
    "remark-cli": "^2.0.0",
    "remark-preset-lint-consistent": "^1.0.0",
    "remark-preset-lint-recommended": "^1.0.0",
    "stylelint": "^7.6.0",
    "stylelint-declaration-use-variable": "^1.6.0",
    "stylelint-scss": "^1.4.1"
  },
  "peerDependencies": {
    "stylelint": "^7.6.0"
  },
  "scripts": {
    "lint-testfile": "stylelint --config index.js __tests__/valid-css.css",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "release": "npmpub",
    "test": "jest",
    "watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "remarkConfig": {
    "presets": [
      "lint-recommended",
      "lint-consistent"
    ]
  }
}
